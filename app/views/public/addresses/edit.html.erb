<div class="container">
  <div class="row my-4">
    <div class="col-md-12 px-sm-0">
      <h3>配送先編集</h3>

      <div class="col-md-9 mt-5">
        <%= form_with model: @address, url:address_path ,method: :patch do |f| %>
          <div class="form-group">
            <%= f.label :"郵便番号(ハイフンなし)",class: "col-md-3 control-label" %>
            <%= f.text_field :postal_code ,class: "col-md-2 form-control-static postal_code" %>
          </div>

          <div class="form-group">
            <%= f.label :"住所" ,class: "col-md-3 control-label" %>
            <%= f.text_field :address ,class: "col-md-5 form-control-static address" %>
          </div>

          <div class="form-group">
            <%= f.label :"宛名" ,class: "col-md-3 control-label" %>
            <%= f.text_field :name ,class: "col-md-2 form-control-static name mr-5" %>
            <%= f.submit '変更内容を保存' ,class: "btn btn-success ml-5" %>
          </div>
        <% end %>
      </div>

    </div>
  </div>
</div>