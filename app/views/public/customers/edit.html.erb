<div class="container">
  <div class="row my-4">
    <div class="col-sm-12 px-sm-0">
      <h3>会員情報編集</h3>

      <div class="row mt-5">
        <%= form_with model: @customer, url: customers_path, method: :patch do |f| %>

          <div class="col-xs-12">
            <div class="form-group row">
              <%= f.label "氏名", class: "col-4" %>
              <%= f.text_field :last_name, class: "col-3" %>
              <%= f.text_field :first_name, class: "col-3 ml-3" %>
            </div>

            <div class="form-group row">
              <%= f.label "フリガナ", class: "col-4"%>
              <%= f.text_field :last_name_kana, class: "col-3"%>
              <%= f.text_field :first_name_kana, class: "col-3 ml-3"%>
            </div>

            <div class="form-group row">
              <%= f.label "郵便番号", class: "col-4" %>
              <%= f.text_field :postal_code, class:"col-4" %>
            </div>

            <div class="form-group row">
              <%= f.label "住所", class: "col-4" %>
              <%= f.text_field :address, class:"col-8" %>
            </div>

            <div class="form-group row">
              <%= f.label "電話番号", class: "col-4" %>
              <%= f.text_field :telephone_number, class:"col-4" %>
            </div>

            <div class="form-group row">
              <%= f.label "メールアドレス", class: "col-4" %>
              <%= f.email_field :email, class:"col-8" %>
            </div>

            <div="col-xs-12">
              <%= f.submit "編集内容を保存", class:"btn btn-success offset-4 mr-5 mt-4" %>
              <%= link_to "退会する", customers_quit_path, class: "btn btn-danger ml-5 mt-4" %>
            </div>
          </div>
        <% end %>
      </div>

    </div>
  </div>
</div>