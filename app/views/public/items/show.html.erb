
    <!-- ジャンル検索サイドバー / 共通化 -->
    <%= render "sidebar", genres: @genres %>

<div class="row">

    <!-- 画像 -->
    <div class="col-xs-4 col-xs-offset-2 product-show">
      <% if @item.image.attached? %>
        <%= image_tag @item.image, size: "340x220" %>
      <% else %>
        <%= image_tag "no_image.jpg" %>
      <% end %>
    </div>

    <!-- タイトル -->
    <div class="col-xs-6 product-show">
      <div class="product-description">
        <div class="field product-name">
          <h2><%= @item.name %></h2>
        </div>
        <!-- 説明 -->
        <div class="field">
          <%= @item.introduction %>
        </div>
        <!-- 価格 -->
        <h3 class="item-price">
          <% if @item.is_active == true %>  <!--商品販売中の場合-->
            <h4>¥<%= (@item.price * 1.1).to_i.to_s(:delimited, delimiter: ',') %><span>（税込）</span></h4>
            <%= form_with model:@cart_item, url: cart_items_path, method: :post do |f| %>
              <%= f.hidden_field :item_id, value: @item.id %>
              <%= f.select :amount, *[1..10], include_blank: "個数選択" %>
              <%= f.submit "カートに入れる", class: "btn btn-success" %>
            <% end %>
          <% else %>
            <h4>売り切れ</h4>
          <% end %>
      </div>
    </div>

    <div class="row">
      <%= flash[:into_cart_error] %>
    </div>

</div>