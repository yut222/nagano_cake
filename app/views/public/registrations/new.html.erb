<div class="container">
  <div class="row my-4">
    <div class="col-sm-12 px-sm-0">
      <h2>新規会員登録</h2>
    </div>
  </div>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= render "public/shared/error_messages", resource: resource %>

    <div class="row">
      <div class="col-2 offset-md-1 my-2">
        <%= f.label "お名前" %>
      </div>
      <div class="col-1 text-right pr-0 my-2">
        <%= f.label "(姓)" %>
      </div>
      <div class="col-3">
        <%= f.text_field :last_name, :size => "10", placeholder: "令和", class: "form-control" %>
      </div>
      <div class="col-1 text-right pr-0 my-2">
        <%= f.label "(名)" %>
      </div>
      <div class="col-3">
        <%= f.text_field :first_name, :size => "10", placeholder: "道子", class: "form-control" %>
      </div>
    </div>

    <div class="row">
      <div class="col-2 offset-md-1 my-2">
        <%= f.label "フリガナ" %>
      </div>
      <div class="col-1 text-right pr-0 my-2">
        <%= f.label "(セイ)" %>
      </div>
      <div class="col-3">
        <%= f.text_field :last_name_kana, :size => "10", placeholder: "レイワ", class: "form-control" %>
      </div>
      <div class="col-1 text-right pr-0 my-2">
        <%= f.label "(メイ)" %>
      </div>
      <div class="col-3"><%= f.text_field :first_name_kana, :size => "10", placeholder: "ミチコ", class: "form-control" %>
      </div>
    </div>

    <div class="row">
      <div class="col-3 offset-md-1 my-2">
        <%= f.label "メールアドレス" %>
      </div>
      <div class="col-3">
        <%= f.email_field :email, :size => "25", placeholder: "sample@example.com", class: "form-control" %>
      </div>
    </div>

    <div class="row">
      <div class="col-3 offset-md-1 my-2">
        <%= f.label "郵便番号(ハイフンなし)" %>
      </div>
      <div class="col-3">
        <%= f.text_field :postal_code, :size => "10", placeholder: "0000000", id: "customer_postcode", class: "form-control" %>
      </div>
    </div>

    <div class="row">
      <div class="col-3 offset-md-1 my-2">
        <%= f.label "住所" %>
      </div>
      <div class="col-3">
        <%= f.text_field :address, :size => "40", placeholder: "東京都渋谷区代々木神園町0-0", id: "customer_address", class: "form-control" %>
      </div>
    </div>

    <div class="row">
      <div class="col-3 offset-md-1 my-2">
        <%= f.label "電話番号(ハイフンなし)" %>
      </div>
      <div class="col-3">
        <%= f.text_field :telephone_number, placeholder: "00000000000", class: "form-control" %>
      </div>
    </div>

    <div class="row">
      <div class="col-3 offset-md-1 my-2">
        <% if @minimum_password_length %>
          <%= f.label "パスワード(#{@minimum_password_length}文字以上)" %>
        <% end %>
      </div>
      <div class="col-3">
        <%= f.password_field :password, class: "form-control" %>
      </div>
    </div>

    <div class="row">
      <div class="col-3 offset-md-1 my-2">
        <%= f.label "パスワード(確認用)" %>
      </div>
      <div class="col-3">
        <%= f.password_field :password_confirmation, class: "form-control" %>
      </div>
    </div>

    <div class="row">
      <div class="col-2 offset-md-4 mt-2">
        <%= f.submit "新規登録", class:"col btn btn-success" %>
      </div>
    </div>
  <% end %>

  <h4 class="mt-4 offset-sm-1">既に登録済みの方</h4>
  <div class="row">
    <div class="col-sm-6 px-sm-0 offset-sm-2 mt-2">
      <p class="new-link">
        <%= link_to 'こちら', new_customer_session_path %> からログインしてください。
      </p>
      <p id="notice"><%= notice %></p>
    </div>
  </div>

</div>