<div class="container takasa">
	<h2><i class="fas fa-box-open"></i>注文履歴詳細</h2><br>
	<div class="row">
		<div class="col-xs-6">
			<p>注文情報</p>
			<table align="left" class="table table-bordered">
				<tr>
					<td>注文日</th>
					<td>
					  <%= @order.created_at.strftime('%Y/%m/%d') %>
					</td>
				</tr>
				<tr>
					<td>配送先</td>
					<td>
					  〒<%= @order.postal_code %><br>
  					<%= @order.address %><br>
  					<%= @order.name %>
					</td>
				</tr>
				<tr>
					<td>支払方法</td>
					<td>
					  <%= @order.payment_method_i18n %>
					</td>
				</tr>
				<tr>
					<td>ステータス</td>
					<td>
					  <%= @order.order_status %>
					</td>
				</tr>
			</table>




			<p>注文内容</p>
				<table class="table table-bordered">
					<tr>
						<th>商品</th>
						<th>単価（税込み)</th>
						<th>個数</th>
						<th>小計</th>
					</tr>
					<% @subtotals = 0 %>
					<% @order_details.each do |order_detail| %>
					<tr>
						<td><%= order_detail.item.name %></td>
						<td><%= (order_detail.item.price * 1.1).floor %></td>
						<td><%= order_detail.amount %></td>
						<td><%= ((order_detail.item.price * order_detail.amount)* 1.1).floor %></td>
					</tr>
					<% @subtotals += (order_detail.item.price * 1.1).floor * order_detail.amount %>
					<% end %>
				</table>
			</div>
			<div class="col-xs-6">
				<div class="row">
				  <br><p>請求情報</p>
				  <table class="table table-bordered">
					<tr>
						<td>商品合計</td>
						<th><%= @subtotals %></th>
					</tr>
					<tr>
						<td>配送料</td>
						<th><%= @order.shipping_cost %></th>
					</tr>
					<tr>
						<td>ご請求額</td>
						<th>
							<%= @subtotals + @order.shipping_cost %>
						</th>
					</tr>
				  </table>
		        </div>
		</div>
	</div>
</div>