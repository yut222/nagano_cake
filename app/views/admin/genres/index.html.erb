<div class="container">
    <div class="row text-center">
        <div class="col-md-12 mt-5">
            <h2>ジャンル一覧・追加</h2>
        </div>
    </div>
    <div class="row my-5 d-flex justify-content-center">
        <div class="col-xs-12">
            <%= form_with model: @genre,url: admin_genres_path,method: :post, remote: true do |f| %>
             <%= f.label :name, "ジャンル名" %>
             <%= f.text_field :name, placeholder:"ジャンル名", id: "form" %>
             <%= f.submit "新規登録", class:"btn btn-success ml-4 py-1" %>
            <% end %>
        </div>
    </div>

    <div class="col-xs-8 col-xs-offset-2">
      <table class="table table-hover table-inverse table-bordered">
        <thead>
          <tr class="info">
            <th>ジャンル</th>
            <th></th>
          </tr>
        </thead>
        <tbody>
          <% @genres.each do |genre| %>
            <tr>
              <td><%= genre.name %></td>
              <td><%= link_to "編集する", edit_admin_genre_path(genre), class: "btn btn-success" %></td>
            </tr>
          <% end %>
        </tbody>
        </table>
      </div>
    </div>

</div>