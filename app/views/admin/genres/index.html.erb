<div class="container">
  <div class="row my-4">
    <div class="col-sm-12 px-sm-0">
      <h3>ジャンル一覧・追加</h3>

      <div class="row mt-5">

          <div class="col-sm-8">
              <%= form_with model: @genre,url: admin_genres_path,method: :post, remote: true do |f| %>
                <%= f.label :name, "ジャンル名", class:"mr-5" %>
                <%= f.text_field :name, placeholder:"ジャンル名", id: "form" %>
                <%= f.submit "新規登録", class:"btn btn-success ml-5 mr-5 py-1" %>
              <% end %>
          </div>
      </div>
      <div class="row mt-5">
      <div class="col-sm-4 col-xs-offset-2">
        <table class="table">
          <thead>
            <tr class="info">
              <th>ジャンル</th>
              <th></th>
            </tr>
          </thead>
          <tbody>
            <% @genres.each do |genre| %>
              <tr>
                <td><%= genre.name %></td>
                <td><%= link_to "編集する", edit_admin_genre_path(genre), class: "btn btn-success" %></td>
              </tr>
            <% end %>
          </tbody>
          </table>
        </div>
      </div>

</div>