<div class="container">
  <div class="row my-4">
    <div class="col-sm-12 px-sm-0">
      <h3>ジャンル編集</h3>

      <div class="row mt-5">
        <div class="col-sm-8">
          <%= form_with model: @genre, url: admin_genre_path, method: :patch do |f| %>
            <%= f.label :name, "ジャンル名", class:"mr-5" %>
            <%= f.text_field :name, value: @genre.name %>
            <%=f.submit "変更を保存", class:"btn btn-success ml-5 mr-5 py-1" %>
          <% end %>
        </div>
      </div>

    </div>
  </div>
</div>