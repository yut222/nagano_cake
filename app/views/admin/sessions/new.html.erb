<div class="container">
  <div class="row my-3">
    <div class="col-sm-8 px-sm-0">
      <h2>管理者ログイン</h2>

      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="row">
          <div class="col-sm-3 px-sm-0 offset-sm-3 mt-4">
            <%= f.label :メールアドレス %><br>
          </div>
          <div class="col-sm-6 px-sm-0 mt-3">
            <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
          </div>
        </div>

        <div class="row">
          <div class="col-sm-3 px-sm-0 offset-sm-3 mt-4">
            <%= f.label :パスワード %><br>
          </div>
          <div class="col-sm-6 px-sm-0 mt-3">
            <%= f.password_field :password, autocomplete: "current-password", class: "form-control" %>
          </div>
        </div>

        <div class="row">
          <div class="col-sm-3 px-sm-0 offset-sm-6">
            <div class="actions">
              <%= f.submit "ログイン", class:"btn btn-primary px-5 mt-4 mb-5" %>
            </div>
          </div>
        </div>

      <% end %>
    </div>
  </div>
</div>