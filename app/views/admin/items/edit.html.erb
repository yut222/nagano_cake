<div class="container">
  <div class="row my-4">
    <div class="col-sm-12 px-sm-0">
      <h2>商品編集</h2>
    </div>

  <div class="row">
    <div class="col-sm-10 px-sm-0 mx-auto">
      <%= form_with model: @item, url: admin_item_path(@item.id), method: :PATCH do |f| %>
        <table class="table table-borderless">
        <tr>

            <th><%= f.label :商品画像 %></th>
            <td><%= f.file_field :image %></td>

        </tr>
        <tr>

            <th><%= f.label :商品名 %></th>
            <td><%= f.text_field :name, placeholder:"商品名" %></td>

        </tr>
        <tr>
          <div class="form-group">
            <th><%= f.label :商品説明 %></th>
            <td><%= f.text_area :introduction, size: "50x5", placeholder:"ここに説明文を記述します" %></td>
          </div>
        </tr>
        <tr>
          <div class="form-group">
            <th><%= f.label :ジャンル %></th>
            <td><%= f.collection_select :genre_id, Genre.all, :id, :name, :prompt => "--選択してください--" %></td>
          </div>
        </tr>
        <tr>
          <div class="form-group">
            <th><%= f.label :税抜価格 %></th>
            <td><%= f.text_field :price, placeholder:"1000" %>円</td>
          </div>
        </tr>
        <tr>
          <div class="form-group">
            <th><%= f.label :販売ステータス %></th>
            <td><%= f.radio_button :is_active, true, checked: true %>
            <%= f.label :is_active, "販売中" %>
            <%= f.radio_button :is_active, false %>
            <%= f.label :is_active, "販売中止" %></td>
          </div>
        </tr>
        <tr>
          <div class="form-action">
            <td><%= f.submit "変更を保存", class:"btn btn-success" %></td>
          </div>
        </tr>
        </table>
      <% end %>
    </div>
  </div>
</div>