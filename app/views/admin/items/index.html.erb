<!-- 商品新規登録してからレイアウト確認する -->

<div class="container">

  <h2>商品一覧</h2>

  <div class="text-right index-new">
    <%= link_to new_admin_item_path do %>
      <button type="button" class="btn btn-primary rounded-circle p-0" style="width:2rem;height:2rem;">＋</button>
    <% end %>
  </div>

  <table class="table table-hover">
    <thead>
      <tr class="active">
        <th>商品ID</th>
        <th>商品名</th>
        <th>税抜価格</th>
        <th>ジャンル</th>
        <th>ステータス</th>
        <th></th>
      </tr>
    </thead>



    <tbody>
      <% @items.each do |item| %>
      <tr>
        <td><%= item.id %></td>
        <td><%= item.item_name %></td>
        <td><%= item.unit_price_without_tax %></td>
        <td><%= item.genre.name %></td>
        <td><%= item.sale_status %></td>
      </tr>
      <% end %>
    </tbody>


  </table>
  <!-- kaminari install -->
  <%= paginate @items %>
</div>