<div class="container">
  <div class="row my-4">
    <div class="col-sm-12 px-sm-0">
      <h2>商品新規登録</h2>
    </div>

    <div class="row offset-sm-2 mt-4">
      <%= form_with model: @item, url: admin_items_path, method: :post do |f| %>
      <table>
        <tr>
          <div class="form-group">
            <th><%= f.label :商品画像, class: "mt-1" %></th>
            <td><%= f.file_field :image, class:"form-control-file offset-sm-1" %></td>
          </div>
        </tr>

        <tr>
          <div class="form-group">
            <th><%= f.label :商品名, class: "mt-2" %></th>
            <td><%= f.text_field :name, placeholder:"商品名", class: "col-sm-8 offset-sm-1 px-sm-0 mt-1" %></td>
          </div>
        </tr>

        <tr>
          <div class="form-group">
            <th><%= f.label :商品説明, class: "mt-2" %></th>
            <td><%= f.text_area :introduction, size: "50x5", placeholder:"ここに説明文を記述します", class: "col-sm-8 offset-sm-1 px-sm-0 mt-1" %></td>
          </div>
        </tr>
        <tr>
          <div class="form-group">
            <th><%= f.label :ジャンル, class: "mt-2" %></th>
            <td><%= f.collection_select :genre_id, Genre.all, :id, :name, :prompt => "--選択してください--", class: "col-sm-8 offset-sm-4 px-sm-0 mt-1" %></td>
          </div>
        </tr>
        <tr>
          <div class="form-group">
            <th><%= f.label :税抜価格, class: "mt-1" %></th>
            <td><%= f.text_field :price, placeholder:"1000", class: "col-sm-8 offset-sm-1 px-sm-0 mt-1" %> 円</td>
          </div>
        </tr>


        <tr>
        <div class="form-group">
          <th><%= f.label :販売ステータス, class: "mt-3" %></th>
          <td><%= f.radio_button :is_active, true, checked: true, class: "offset-sm-1" %>
              <%= f.label :is_active, "販売中", class: "px-sm-0 mt-3" %>
              <%= f.radio_button :is_active, false, class: "offset-sm-1" %>
              <%= f.label :is_active, "販売停止中", class: "px-sm-0 mt-3" %>
          </td>
        </div>
        </tr>
        <tr>
        <div class="form-group">
          <th><%= f.submit "新規登録", class:"btn btn-success col-sm-10 offset-md-1 px-sm-0 mt-4" %></th>
        </div>
        </tr>


        <tr>
          <div class="form-group">
          <div class="row">
            <div class="col-sm-5 px-sm-0 offset-sm-4 mt-4">
              <div class="actions">

               <%= f.submit "新規登録", class:"btn btn-success px-5" %>
              </div></div>

      <% end %>
      </table>
    </div>
    </div>
  </div>
</div>