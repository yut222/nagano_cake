<div class="container">
  <div class="row my-4">
    <div class="col-sm-12 px-sm-0">
      <div class="offset-sm-1"><h3>会員一覧</h3></div>

      <div class="row my-3">
        <div class="col-sm-8 px-sm-0 offset-sm-2">
          <table class="table table-bordered">
            <thead>
              <tr>
                <th class="table-active">会員ID</th>
                <th class="table-active">氏名</th>
                <th class="table-active">メールアドレス</th>
                <th class="table-active">ステータス</th>
              </tr>
            </thead>
            <tbody>
              <% @customers.each do |customer| %>
                <tr>
                  <td class="align-middle"><%= customer.id %></td>
                  <td class="align-middle"><u><%= link_to customer.last_name + customer.first_name, admin_customer_path(customer.id), class:"font-weight-bold" %></u></td>
                  <td class="align-middle"><%= customer.email %></td>
                  <td class="align-middle">
                    <% if customer.is_deleted == false %>
                      <p class="text-success font-weight-bold">有効</p>
                    <% else %>
                      <p class="text-secondary">退会</p>
                    <% end %>
                  </td>
                </tr>
              <% end %>
            </tbody>
          </table>

          <div class="row">
            <div class="col-sm-8 offset-4">
              <%= paginate @customers %>
          </div>

        </div>
      </div>
    </div>
  </div>
</div>