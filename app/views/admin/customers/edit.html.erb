<div class="container">
  <div class="row my-3">
    <div class="col-sm-8 px-sm-0 offset-sm-1">
      <h2><%= @customer.last_name + @customer.first_name %>さんの会員情報編集</h2>
    </div>



    <%= form_with model: @customer, url: admin_customer_path(@customer.id), method: :patch do |f| %>
      <table>
            <div class="field">
              <tr>
              <th><%= f.label :会員ID ,class: "col-xs-3"%></th>
              <td><%= f.label :"#{@customer.id}" %></td>
              </tr>
            </div>
            <div class="field">
              <tr>
                <th><%= f.label :氏名 ,class: "col-xs-3"%></th>
                <td>
                  <%= f.text_field :last_name, autofocus: true, autocomplete: "last_name", placeholder: "山田" %>
                  <%= f.text_field :first_name, autofocus: true, autocomplete: "first_name", placeholder: "花子" %>
                </td>
              </tr>
            </div>
            <div class="field">
              <tr>
                <th><%= f.label :フリガナ,class: "col-xs-3" %></th>
                <td>
                  <%= f.text_field :last_name_kana, autofocus: true, autocomplete: "last_name_kana", placeholder: "ヤマダ" %>
                  <%= f.text_field :first_name_kana, autofocus: true, autocomplete: "first_name_kana", placeholder: "ハナコ" %>
                </td>
              </tr>
            </div>
            <div class="field">
              <tr>
                <th><%= f.label :郵便番号 ,class: "col-xs-3"%></th>
                <td><%= f.text_field :postal_code, autofocus: true, autocomplete: "postal_code", placeholder: "1500041" %></td>
              </tr>
            </div>
            <div class="field">
              <tr>
                <th><%= f.label :住所 ,class: "col-xs-3"%></th>
                <td><%= f.text_field :address, autofocus: true, autocomplete: "address" ,size: "50", placeholder: "東京都渋谷区神南1丁目19-11 パークウェースクエア24階" %></td>
              </tr>
            </div>
            <div class="field">
              <tr>
                <th><%= f.label :電話番号 ,class: "col-xs-3"%></th>
                <td><%= f.text_field :telephone_number, autofocus: true, autocomplete: "phone_number", placeholder: "0368694700" %></td>
              </tr>
            </div>
            <div class="field">
              <tr>
                <th><%= f.label :メールアドレス ,class: "col-xs-3"%></th>
                <td><%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "hoge@example.com" %></td>
              </tr>
            </div>
            <div class="field text-left">
              <tr>
                <th><%= f.label "会員ステータス" %></th>
                <td>
                　<%= f.radio_button :is_deleted, false %>
                　<%= f.label :is_deleted, "有効"%>
                　<%= f.radio_button :is_deleted, true %>
                　<%= f.label :is_deleted, "退会" %>
                </td>
              </tr>
            </div>
            <div class="text-right">
              <tr>
                <th>
                  <%= f.submit "変更を保存", class:"btn btn-primary" %>
                </th>
              </tr>
            </div>

      </table>
    <% end %>
  </div>
</div>