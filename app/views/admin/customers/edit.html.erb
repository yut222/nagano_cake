<div class="container">
  <div class="row my-4">
    <div class="col-sm-12 px-sm-0">
      <h3><%= @customer.last_name + @customer.first_name %>さんの会員詳細</h3>

      <div class="row mt-5">
        <div class="col-sm-12 px-sm-0">
          <%= form_with model: @customer, url: admin_customer_path(@customer.id), method: :patch do |f| %>
            <table class="table table-borderless">
              <tr>
                <th>会員ID</th>
                <td><%= f.label :"#{@customer.id}" %></td>
              </tr>
              <tr>
                <th>氏名</th>
                <td>
                  <%= f.text_field :last_name, autofocus: true, autocomplete: "last_name", placeholder: "山田" %>
                  <%= f.text_field :first_name, autofocus: true, autocomplete: "first_name", placeholder: "花子" %>
                </td>
              </tr>
              <tr>
                <th>フリガナ</th>
                <td>
                  <%= f.text_field :last_name_kana, autofocus: true, autocomplete: "last_name_kana", placeholder: "ヤマダ" %>
                  <%= f.text_field :first_name_kana, autofocus: true, autocomplete: "first_name_kana", placeholder: "ハナコ" %>
                </td>
              </tr>
              <tr>
                <th>郵便番号</th>
                <td><%= f.text_field :postal_code, autofocus: true, autocomplete: "postal_code", placeholder: "1500041" %></td>
              </tr>
              <tr>
                <th>住所</th>
                <td><%= f.text_field :address, autofocus: true, autocomplete: "address" ,size: "50", placeholder: "東京都渋谷区神南1丁目19-11 パークウェースクエア24階" %></td>
              </tr>
              <tr>
                <th>電話番号</th>
                <td><%= f.text_field :telephone_number, autofocus: true, autocomplete: "phone_number", placeholder: "0368694700" %></td>
              </tr>
              <tr>
                <th>メールアドレス</th>
                <td><%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "hoge@example.com" %></td>
              </tr>
              <tr>
                <th><%= f.label :会員ステータス %></th>
                <td>
                　<%= f.radio_button :is_deleted, false %>
                　<%= f.label :is_deleted, "有効" %>
                　<%= f.radio_button :is_deleted, true %>
                　<%= f.label :is_deleted, "退会" %>
                </td>
              </tr>
            <table>

            <div class="row">
              <div class="col-sm-4 px-sm-0 offset-sm-3">
                <div class="actions">
                <%= f.submit "変更を保存", class:"btn btn-success", class:"btn btn-success px-4" %>
                </div>
              </div>
            </div>

          <% end %>
        </div>
      </div>

    </div>
  </div>
</div>