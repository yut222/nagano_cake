<div class="container">
  <div class="row my-4">
    <div class="col-sm-12 px-sm-0">
      <h3><%= @customer.last_name + @customer.first_name %>さんの会員詳細</h3>


      <div class="row mt-5">

    <div class="col-sm-6 px-sm-0">
      <table class="table table-borderless">
        <tr>
          <th>会員ID</th>
          <td><%= @customer.id %></td>
        </tr>
        <tr>
          <th>氏名</th>
          <td><%= @customer.last_name + @customer.first_name %></td>
        </tr>
        <tr>
          <th>フリガナ</th>
          <td><%= @customer.last_name_kana + @customer.first_name_kana %></td>
        </tr>
        <tr>
          <th>郵便番号</th>
          <td><%= @customer.postal_code %></td>
        </tr>
        <tr>
          <th>住所</th>
          <td><%= @customer.address %></td>
        </tr>
        <tr>
          <th>電話番号</th>
          <td><%= @customer.telephone_number %></td>
        </tr>
        <tr>
          <th>メールアドレス</th>
          <td><%= @customer.email %></td>
        </tr>
        <tr>
          <th>会員ステータス</th>
            <% if @customer.is_deleted == false %>
              <td class="text-success font-weight-bold">有効</td>
            <% else %>
              <td class="text-secondary">退会<td>
            <% end %>
        </tr>
      </table>
    </div>
  </div>
  <div class="row">
    <div class="col-lg-6 px-sm-0 offset-sm-2">
      <%= link_to "編集する", edit_admin_customer_path(@customer.id), class:"btn btn-success my-1 mx-4 px-4 mr-5" %>
      <%= link_to "注文履歴一覧を見る", admin_root_path, class:"btn btn-primary mx-4 px-4" %>
    </div>
  </div>
</div>